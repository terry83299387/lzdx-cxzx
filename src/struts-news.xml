<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="news" extends="json-default">

		<action name="showNewsList"
			class="cn.edu.lzu.common.news.action.NewsAction"
			method="showNewsList">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		
		<action name="loadNews"
			class="cn.edu.lzu.common.news.action.NewsAction"
			method="loadNews">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		
		<action name="deleteNews"
			class="cn.edu.lzu.common.news.action.NewsAction"
			method="deleteNews">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		
		<action name="submitNews"
			class="cn.edu.lzu.common.news.action.NewsAction"
			method="submitNews">
			<result type="json" />
			<result name="error" type="json" />
		</action>

	</package>
</struts>