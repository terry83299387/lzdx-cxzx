<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="file" extends="json-default">

        <result-types>
			<result-type name="displayResult"
				class="cn.edu.lzu.common.file.result.DisplayFileResult" />
		</result-types>

		<action name="showFileList"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="showFileList">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="showFileContent"
			class="cn.edu.lzu.common.file.action.ShowFileContent" method="showFile">
			<result name="success" type="stream">
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">
					attachment;filename=${filename}
				</param>
				<param name="bufferSize">4096</param>
			</result>
			<result name="error" type="json" />
		</action>


        <action name="showImageContent"
			class="cn.edu.lzu.common.file.action.ShowFileContent" method="showImage">
			<result name="success" type="displayResult">
			</result>
			<result name="error" type="json" />
		</action>

        <action name="showPdfContent"
			class="cn.edu.lzu.common.file.action.ShowFileContent" method="showPdf">
			<result name="success" type="displayResult">
			</result>
			<result name="error" type="json" />
		</action>


		<action name="doTailFile"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="tailFile">
			<result name="success" type="stream">
				<param name="inputName">inputStream</param>
				<param name="contentDisposition">
					attachment;filename=${filename}
				</param>
				<param name="bufferSize">4096</param>
			</result>
			<result name="error" type="json" />
		</action>
		
		<action name="doSaveFile"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="saveFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="copySameFile"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="copySameFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		
		<action name="doNewFolder"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="newFolder">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		<action name="doNewFile"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="newFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="judgeFileExists"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="judgeFileExists">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="judgeFileListExists"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="judgeFileListExists">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="doRename"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="renameFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="doPaste"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="paste">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="doZip"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="zipFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="doUnzip"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="unzipFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="doChmod"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="chmodFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		<action name="doDel"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="delFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>

        <action name="doMd5File"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="md5File">
			<result type="json" />
			<result name="error" type="json" />
		</action>

  		<action name="doDos2unix"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="dos2Unix">
			<result type="json" />
			<result name="error" type="json" />
		</action>

		<action name="showClusterListInFileMng"
			class="cn.edu.lzu.common.file.action.FileOperate"
			method="showClusterListInFileMng">
			<result type="json" />
			<result name="error" type="json" />
		</action>
		
		<action name="uploadServerFile"
			class="cn.edu.lzu.common.file.action.UploadFile"
			method="uploadFile">
			<result type="json" />
			<result name="error" type="json" />
		</action>
	</package>
</struts>